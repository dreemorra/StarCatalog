<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Star_Catalog.Views.SettingsPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand">
            <StackLayout Orientation='Horizontal' HorizontalOptions="FillAndExpand">
                <Label Text="Dark theme" FontSize="Large" Margin="10" HorizontalOptions="Start"/>
                <StackLayout HorizontalOptions="EndAndExpand">
                    <Switch IsToggled="True"
                        x:Name="SwitchTheme"
                        VerticalOptions="End"
                        HorizontalOptions="End" Margin="10"/>
                </StackLayout>
            </StackLayout>
            <StackLayout HorizontalOptions="FillAndExpand" Orientation="Horizontal" x:Name="Layout_Lang" Margin="10">
                <Label x:Name="Lang_Label" FontSize="Large" HorizontalOptions="StartAndExpand" VerticalOptions="CenterAndExpand"/>
                <StackLayout HorizontalOptions="EndAndExpand">
                    <Picker x:Name="PickLang" HorizontalOptions="FillAndExpand" WidthRequest="110"/>
                </StackLayout>
            </StackLayout>
            <StackLayout Orientation="Horizontal" VerticalOptions="EndAndExpand">
                <StackLayout HorizontalOptions="CenterAndExpand">
                    <Button x:Name="ApplyButton" HorizontalOptions="FillAndExpand"/>
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>